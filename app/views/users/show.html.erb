<section class="section">
  <div class="container">
    <h1 class="heading">User details</h1>
    <div class="flex flex-column gap-4 content-lg">
      <div>
        <strong>Username:</strong>
        <%= @user.username %>
      </div>

      <div>
        <strong>Email:</strong>
        <%= @user.email %>
      </div>

      <div>
        <strong>Name:</strong>
        <%= @user.name %>
      </div>

      <div class="select mt-1">
        <%= image_tag @user.avatar, style: 'height:auto; width:20%;',class:"avatar" %>
      </div>
    
      <div>
        <%= link_to 'Back', root_path %>
      </div>
    </div>
  </div>
</section>

